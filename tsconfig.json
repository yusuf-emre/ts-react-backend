{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build", /* add output directory */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]  /*only compile source files*/
}
